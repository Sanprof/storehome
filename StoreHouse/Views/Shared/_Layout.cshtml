<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Инструменты</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/sbadmin")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/admin")
    @Scripts.Render("~/bundles/model")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div id="master-div">
        <div id="wrapper">
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Content("~")">Инструменты</a>
                </div>
                <ul class="nav navbar-top-links navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#"><i class="fa fa-user fa-fw"></i> Профиль</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-gear fa-fw"></i> Настройки</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="javascript:void(0)" data-bind="click: logout"><i class="fa fa-sign-out fa-fw"></i> Выйти</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li>
                                <a href="javascript:void(0)" data-bind="click: onMenuItemClick.bind($data, 'StartPageManager')"><i class="fa fa-bar-chart fa-fw"></i> Главная</a>
                            </li>
                            <li>
                                <a href="javascript:void(0)" data-bind="click: onMenuItemClick.bind($data, 'ToolsControlManager')"><i class="fa fa-gears fa-fw"></i> Инструменты</a>
                            </li>
                            <li>
                                <a href="javascript:void(0)" data-bind="click: onMenuItemClick.bind($data, 'PositionManager')"><i class="fa fa-street-view fa-fw"></i> Должности</a>
                            </li>
                            <li>
                                <a href="javascript:void(0)" data-bind="click: onMenuItemClick.bind($data, 'WorkerManager')"><i class="fa fa-users fa-fw"></i> Работники</a>
                            </li>
                            <li>
                                <a href="javascript:void(0)" data-bind="click: onMenuItemClick.bind($data, 'WriteOffManager')"><i class="fa fa-trash fa-fw"></i> Списанные</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div id="page-wrapper">
                @RenderBody()
            </div>
        </div>
    </div>
    <div id="confirm-dialog">
        <div data-bind="with: currentConfirmText">
            <div data-bind="template: { name: 'confirmDialog', data: $parent }">
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/Scripts/bootstrap/sb-admin-2.js")"></script>
    @RenderSection("scripts", false)
    <script>
        infuser.defaults.templateSuffix = ".tmpl.html";
        infuser.defaults.templateUrl = "templates";
        infuser.defaults.ajax.cache = false;
        //ko.validation.registerExtenders();
        /* Apply bindings for MasterModel */
        var rootM = new MasterModel();
        /*pager.extendWithPage(rootM);*/
        ko.applyBindings(rootM, document.getElementById('master-div'));
        //pager.startHistoryJs();
        /*pager.start();*/
        /* Confirmation model for modal dialog */
        var confirmation = new Confirmation();
        ko.applyBindings(confirmation, document.getElementById("confirm-dialog"));
    </script>

</body>
</html>